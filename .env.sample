# ERPNext Configuration
# The base URL where your ERPNext instance is hosted
ERPNEXT_BASE_URL=http://localhost:8000

# API Configuration
# API token for authentication (if using API token authentication)
ERPNEXT_API_TOKEN=

# API secret for authentication (if using API token authentication)
ERPNEXT_API_SECRET=

# Session/Cookie configuration
# Your ERPNext session or authentication cookie (if using session authentication)
ERPNEXT_SESSION_COOKIE=

# Synchronization Configuration
# Interval (in milliseconds) for syncing data with ERPNext backend
# Default: 60000 (1 minute)
SYNC_INTERVAL=60000

# Application Environment
# Set to 'development' for development mode with DevTools
# Set to 'production' for production builds
NODE_ENV=development

# Logging Configuration
# Set to 'true' to enable verbose logging
DEBUG=false

# Offline Interceptor Configuration
# Processing interval for queued requests (milliseconds)
PROCESSING_INTERVAL=5000

# Maximum number of retries for failed requests
MAX_RETRIES=3

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Base retry delay for exponential backoff (milliseconds)
BASE_RETRY_DELAY=1000

# Maximum retry delay (milliseconds)
MAX_RETRY_DELAY=300000

# Sync batch size (number of requests per batch)
SYNC_BATCH_SIZE=10

# Application secret for credential encryption
APP_SECRET=
